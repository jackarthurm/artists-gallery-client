{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@envs/*": ["environments/*"],
      "@app/*": ["app/*"],
      "@services/*": ["app/services/*"],
      "@components/*": ["app/components/*"],
      "@data/*": ["app/data/*"],
      "@models/*": ["app/models/*"],
    }
  }
}
